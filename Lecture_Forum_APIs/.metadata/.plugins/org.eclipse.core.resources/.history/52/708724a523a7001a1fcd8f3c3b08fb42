package com.lecture.dto;

import java.sql.Date;
import java.util.Arrays;

import javax.persistence.Column;
import javax.persistence.Embeddable;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.Id;
import javax.persistence.JoinColumn;
import javax.persistence.ManyToOne;

@Entity
@Embeddable
public class Replies {

	@Id
	@GeneratedValue
	private Integer replyID;

	@ManyToOne
	@JoinColumn(name = "threadID", referencedColumnName = "ThreadID")
	private Integer threadID;

	@ManyToOne
	@JoinColumn(name = "userID", referencedColumnName = "UserID")
	private Integer userID;

	@Column(name = "ReplyText")
	private String replyText;

	@Column(name = "Attachment")
	private byte[] attachment;

	@Column(name = "DateTime")
	private Date dateTime;

	public Threads getThreadID() {
		return threadID;
	}

	public void setThreadID(Threads threadID) {
		this.threadID = threadID;
	}

	public Users getUserID() {
		return userID;
	}

	public void setUserID(Users userID) {
		this.userID = userID;
	}

	public String getReplyText() {
		return replyText;
	}

	public void setReplyText(String replyText) {
		this.replyText = replyText;
	}

	public byte[] getAttachment() {
		return attachment;
	}

	public void setAttachment(byte[] attachment) {
		this.attachment = attachment;
	}

	public Date getDateTime() {
		return dateTime;
	}

	public void setDateTime(Date dateTime) {
		this.dateTime = dateTime;
	}

	@Override
	public String toString() {
		StringBuilder builder = new StringBuilder();
		builder.append("Replies [threadID=");
		builder.append(threadID);
		builder.append(", userID=");
		builder.append(userID);
		builder.append(", replyText=");
		builder.append(replyText);
		builder.append(", attachment=");
		builder.append(Arrays.toString(attachment));
		builder.append(", dateTime=");
		builder.append(dateTime);
		builder.append("]");
		return builder.toString();
	}

}
